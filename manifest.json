{
"update_url":"http://clients2.google.com/service/update2/crx",
	"name": "Amazon Associates Monetizer",
	"version": "1.0.2",
	"manifest_version": 2,
	"description": "Turn all your Amazon purchases into Amazon Associate purchases.",
    "short_name": "Turn all your Amazon purchases into Amazon Associate purchases",
	"browser_action": {
		"default_icon": "amzn.png",
		"default_title": "Amazon Associates Monetizer",
		"default_popup": "amzn.html"
	},
    "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
	"permissions": [
        "webRequest",
        "webRequestBlocking",
        "http://www.amazon.com/*",
        "https://www.amazon.com/*",
        "http://www.amazon.ca/*",
        "https://www.amazon.ca/*",
        "http://www.amazon.co.uk/*",
        "https://www.amazon.co.uk/*",
        "http://www.amazon.de/*",
        "https://www.amazon.de/*",
        "http://www.amazon.es/*",
        "https://www.amazon.es/*",
        "http://www.amazon.fr/*",
        "https://www.amazon.fr/*",
        "http://www.amazon.it/*",
        "https://www.amazon.it/*",
        "http://www.amazon.co.jp/*",
        "https://www.amazon.co.jp/*",
        "http://www.amazon.cn/*",
        "https://www.amazon.cn/*",
        "https://smile.amazon.com/*",
        "http://smile.amazon.com/*",
        "tabs"
    ],
	"background": {
		"scripts": ["request.js"]
	}
}